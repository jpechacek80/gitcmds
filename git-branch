//git-branch

git branch -a     //lists remote & local branches

git branch v1       //create branch v1
git checkout v1     //swith to branch v1
git checkout -b v1  //create and checkout

// udate remote with new branch--
git push --set-upstream origin v1


# Create branch from remote branch
$ git branch --track v1 origin/v1

//Delete Remote branch
$ git branch -d v1              //Delete local branch
$ git push origin --delete v1   //Delete remote branch
$ git fetch -p                  //sychronizes pruned remote branch
